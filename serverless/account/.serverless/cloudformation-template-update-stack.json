        "Path": "/",
        "RoleName": {
          "Fn::Join": [
            "-",
            [
              "account",
              "dev",
              {
                "Ref": "AWS::Region"
              },
              "lambdaRole"
            ]
          ]
        }
      }
    },
    "SetUpDatabaseLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "ServerlessDeploymentBucket"
          },
          "S3Key": "serverless/account/dev/1604599030896-2020-11-05T17:57:10.896Z/account.zip"
